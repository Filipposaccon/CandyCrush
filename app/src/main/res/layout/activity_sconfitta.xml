<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondosistemato"
    tools:context=".Sconfitta">

    <TextView
        android:id="@+id/Titolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Hai perso"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Obiettivo"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginStart="145dp"
        android:layout_marginTop="305dp"/>
    <TextView
        android:id="@+id/punteggioObiettivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="3540"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_marginTop="340dp"/>
    <pl.droidsonroids.gif.GifImageView

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="1800dp"
        android:src="@drawable/omino_sconfitta" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="215dp"
        android:src="@drawable/fantama_ride" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="190dp"
        android:src="@drawable/fantasma_diabolico" />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="100dp"
            android:layout_height="100dp"
        android:layout_marginStart="234dp"
        android:layout_marginTop="550dp"
        android:src="@drawable/mano_destra" />

    <ImageView
        android:id="@+id/PrimaStella"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/Titolo"
        android:layout_marginStart="60dp"
        android:layout_marginTop="120dp"
        android:rotation="-20"
        android:src="@drawable/stellavuota" />

    <ImageView
        android:id="@+id/SecondaStella"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/Titolo"
        android:layout_marginStart="140dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/stellavuota" />

    <ImageView
        android:id="@+id/TerzaStella"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/Titolo"
        android:layout_marginStart="220dp"
        android:layout_marginTop="120dp"
        android:rotation="20"
        android:src="@drawable/stellavuota" />
    <Button
        android:id="@+id/Rigioca"
        android:layout_marginTop="575dp"
        android:layout_marginStart="125dp"
        android:layout_width="wrap_content"
        android:text="Rigioca"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textStyle="bold"
        android:textColor="@color/ScrittaMenu"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/round"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/bambina_piange"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/bambina_piange"/>
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="225dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/camellalla_tutticolori" />
</android.support.design.widget.CoordinatorLayout>