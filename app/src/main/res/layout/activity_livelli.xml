<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/sfondosistemato"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:src="@drawable/scritta"
        android:layout_marginTop="20dp"
        />
    <android.support.v4.view.ViewPager
        android:foregroundGravity="center"
        android:id="@+id/viewPager"
        android:layout_centerInParent="true"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <Button
        android:id="@+id/Istruzioni"
        android:text="Istruzioni"
        android:textStyle="bold"
        android:textColor="@color/ScrittaMenu"
        android:background="@drawable/round"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<TextView
    android:id="@+id/NumeroMoneteLivelli"
    android:layout_width="85dp"
    android:layout_height="wrap_content"
    android:textSize="25dp"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:layout_marginStart="250dp"
    android:layout_marginTop="635dp"
    android:background="@drawable/bordo_sconfitta"/>
    <pl.droidsonroids.gif.GifImageView
        android:layout_below="@id/TitoloPunteggio"
        android:layout_width="60dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="630dp"
        android:layout_height="60dp"
        android:src="@drawable/moneta" />
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/ManoIstruzioni"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginStart="239dp"
        android:layout_marginTop="525dp"
        android:src="@drawable/mano_destra" />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="105dp"
        android:src="@drawable/bambina1" />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="115dp"
        android:src="@drawable/bambina2" />
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="515dp"
        android:layout_marginEnd="700dp"
        android:src="@drawable/mostrosalta" />



</RelativeLayout>